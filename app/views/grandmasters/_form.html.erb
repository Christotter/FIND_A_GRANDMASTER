<!-- app/views/grandmasters/_form.html.erb -->

      <%= simple_form_for(@grandmaster) do |f| %>
        <%= f.input :elo_rating %>
        <%= f.input :fide_id %>
        <%= f.input :language, collection: ['English', 'French', 'Spanish']%>
        <%= f.input :country %>
        <%= f.input :bio %>
        <div class="d-flex justify-content-center">
          <div>
            <%= f.submit class: "hero-btn" %>
          </div>
        </div>
      <% end %>
