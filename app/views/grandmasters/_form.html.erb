      <%= simple_form_for(@grandmaster) do |f| %>
        <%= f.input :elo_rating %>
        <%= f.input :fide_id %>
        <%= f.input :language, collection: [['English', 'en'], ['French', 'fr'], ['Spanish', 'sp']]%>
        <%= f.input :country %>
        <%= f.input :bio %>
        <%= f.submit %>
      <% end %>
