<!-- app/views/grandmasters/_form.html.erb -->
<%= form_for(@grandmaster) do |f| %>
  <%= f.label :elo_rating %>
  <%= f.text_field :elo_rating %>
  <%= f.label :fide_id %>
  <%= f.text_field :fide_id %>
  <%= f.label :language %>
  <%= f.select :language, options_for_select([['English', 'en'], ['French', 'fr'], ['Spanish', 'sp']], :language)%>
  <%= f.label :bio %>
  <%= f.text_area :bio %>
  <%= f.submit %>
<% end %>
