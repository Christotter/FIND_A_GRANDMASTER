<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">
    <div id="logo">
      <%= image_tag "components/Logo.svg"  %>
      </div>

</a>
<div class="search-bar"> <%= image_tag "components/search.svg"   %></div>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">

          <li class= nav-item>
            <%= link_to "Sign as a Grandmaster", new_grandmaster_path, class: "nav-link" %>
          </li>

          <li class="nav-item active">
            <%= link_to "Bookings", bookings_path, class: "nav-link" %>
          </li>

          <li class="nav-item">
            <a class="nav-link" href="#">Messages</a>
          </li>

          <li class="nav-item dropdown nav-link">

          <%# avatar photo if it is sign in %>
           <% if user_signed_in? && current_user.photo %>
              <% image_link = current_user.photo%>
              <%= image_tag image_link, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" } %>
            <% else %>
              <%= image_tag "components/user.svg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" } %>
           <% end %>

          <%# sign in - sign out cases for dropdown %>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <% if user_signed_in? %>
                <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'dropdown-item' %>
              <% else %>
                <%= link_to 'Sign in', new_user_session_path, class: 'dropdown-item' %>
              <% end %>

            </div>
          </li>
    </div>
  </div>
</div>
