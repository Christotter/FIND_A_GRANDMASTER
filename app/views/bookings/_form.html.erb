<div class="container ">
  <div class="row justify-content-center">
  <div class="class gm-info">
    <h3>Reservation for <%= @grandmaster.user.name %> - <%= @grandmaster.elo_rating %>Elo</h3>
    <%= cl_image_tag @grandmaster.user.photo.key, class: "avatar-large" %>
    <%= @grandmaster.bio %>
    <div class="user_form">
      <%= simple_form_for([@grandmaster, @booking]) do |f| %>
        <%= f.input :message %>
        <div class="d-flex justify-content-center">
          <%= f.submit class: "hero-btn"%>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>
